{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",             
    "outDir": "./dist",               
    "rootDir": "./src",               
    "strict": true,                   
    "esModuleInterop": true,          
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}